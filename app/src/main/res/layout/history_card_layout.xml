<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/history_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="?colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/checkmark"/>

            <TextView
                android:id="@+id/history_card_view_task_name"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:text="Text"
                android:textSize="24dp"
                android:layout_marginLeft="40dp"
                android:textColor="?android:textColorPrimary"/>

            <TextView
                android:id="@+id/history_card_view_priority"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="High"
                android:textAlignment="textEnd"
                android:layout_marginEnd="44dp"
                android:textColor="#FEE12B"
                android:textSize="24dp" />

            <ImageButton
                android:id="@+id/remove_task_from_history_image_button"
                android:layout_width="42dp"
                android:layout_height="32dp"
                android:backgroundTint="?colorPrimary"
                android:layout_alignParentEnd="true"
                android:src="@drawable/red_cross"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>